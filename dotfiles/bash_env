BASH_ENV=~/.bash_env
EDITOR=vim
GREP_OPTIONS="--colour=auto"
LESSHISTFILE=-
PAGER=less

if [ "$(uname)" = "Darwin" ]; then
    LANG=en_US.UTF-8
    LC_ALL=en_US.UTF-8

    MANPATH="/opt/local/share/man:$MANPATH"
    MANPATH="/Library/Application Support/Tarsnap/share/man:$MANPATH"

    PATH="$HOME/Library/Haskell/bin:/opt/local/bin:/opt/local/sbin:$PATH"
    PATH="/Library/Application Support/Tarsnap/bin:$HOME/opt/j64-803/bin:$PATH"
    PATH="/Applications/Racket\ v6.1.1/bin/:$PATH"

    export LANG LC_ALL MANPATH DYLD_LIBRARY_PATH
fi

PATH=$HOME/opt/bin:$HOME/.bin:$PATH:$HOME/ghc84/bin:$HOME/.cabal/bin/

# Read and set any machine local overrides
[ -f ~/.bash_env_local ] && . ~/.bash_env_local

export BASH_ENV EDITOR GREP_OPTIONS LESSHISTFILE PAGER PATH
